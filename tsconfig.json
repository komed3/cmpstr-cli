{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [ "ES2020" ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [ "src" ]
}